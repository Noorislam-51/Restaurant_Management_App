<!-- views/partials/header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Navbar with Logo and Auth Buttons</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/header.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark  shadow-lg sticky-top">
    <div class="container-fluid px-3 px-lg-4">
      
      <% if (page==='dashboard') { %>
        <a class="navbar-brand d-flex align-items-center" href="/">
          <img
            src="/images/logo.png"
            alt="Logo" 
            class="img-fluid me-2"
            style="height: 40px; object-fit: contain;">
        </a>
        
        <div class="ms-auto d-flex align-items-center gap-2 flex-wrap">
          <% if (isAuthenticated) { %>
            <span class="navbar-text text-white bg-light bg-opacity-10 px-3 py-2 rounded-pill border border-light border-opacity-25 d-none d-sm-inline-block">
              <i class="bi bi-person-circle me-1"></i>
              Welcome, <strong><%= user.username %></strong>
            </span>
            <a href="/logout" class="btn btn-outline-light rounded-pill px-4 fw-semibold">
              <i class="bi bi-box-arrow-right me-1"></i>
              Logout
            </a>
          <% } else { %>
            <a href="#" class="btn btn-outline-light rounded-pill px-4 fw-semibold" id="openLogin">
              <i class="bi bi-box-arrow-in-right me-1"></i>
              Login
            </a>
            <a href="#" class="btn btn-light text-primary rounded-pill px-4 fw-semibold shadow-sm" id="openSignup">
              <i class="bi bi-person-plus me-1"></i>
              Signup
            </a>
          <% } %>
        </div>
        
      <% } else if (page==='menu') { %>
        <a class="navbar-brand d-flex align-items-center" href="/dashboard">
          <img
            src="/images/logo.png"
            alt="Logo" 
            class="img-fluid me-2"
            style="height: 40px; object-fit: contain;">
        </a>
        
        <div class="ms-auto">
          <a href="/cart" class="btn btn-outline-light rounded-pill px-4 fw-semibold position-relative">
            <i class="bi bi-cart3 me-2 fs-5"></i>
            Cart
        
          </a>
        </div>
        
      <% } else if (page==='cart') { %>
        <a class="navbar-brand d-flex align-items-center" href="/">
          <img
            src="/images/logo.png"
            alt="Logo" 
            class="img-fluid me-2"
            style="height: 40px; object-fit: contain;">
        </a>
        
        <div class="ms-auto">
          <a href="/" class="btn btn-outline-light rounded-pill px-4 fw-semibold">
            <i class="bi bi-arrow-left me-2"></i>
            Back to Menu
          </a>
        </div>
        
      <% } %>
      
    </div>
  </nav>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>