<!DOCTYPE html>
<html>

<head>
  <title>Resstaurant Menu Page</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <link href="/stylesheets/menu.css" rel="stylesheet" />
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>

  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid px-4">
      <!-- Logo -->
      <a class="navbar-brand" href="/dashboard">
        <img
          src="https://plus.unsplash.com/premium_photo-1661914978519-52a11fe159a7?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8bG9nb3xlbnwwfHwwfHx8MA%3D%3D"
          alt="Logo" class="logo">
      </a>
      <!-- Cart Button -->
      <div class="ms-auto">
        <a href="/cart" class="btn btn-outline- position-relative">
          ğŸ›’ Cart
        </a>
      </div>
    </div>
  </nav>
  <h1 class="our-menu">Our Menu</h1>
  <div class="btns">
    <button class="filter-btn" data-filter="All">All</button>
    <button class="filter-btn" data-filter="Starter">Starter</button>
    <button class="filter-btn" data-filter="Main Course">Main Course</button>
    <button class="filter-btn" data-filter="Dessert">Dessert</button>
    <button class="filter-btn" data-filter="Beverages">Beverages</button>
    <button class="filter-btn" data-filter="Special">Special</button>
  </div>
  <div id="menu-container" class="container py-5">
    <% if (menuItems && menuItems.length> 0) { %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% menuItems.forEach(function(item) { %>
     <div class="col menu-card" data-category="<%= item.menucategory.trim() %>">

            <div class="card h-100 shadow-sm" style="height: 500px; width: 100%;">
              <img src="/images/uploads/<%= item.menuimage %>" onerror="this.src='/images/placeholder.jpg'"
                class="card-img-top" alt="<%= item.menuname %>" style="height: 180px; object-fit: cover;">

              <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                  <%= item.menuname %>
                </h5>
                <p class="text-muted mb-1"><strong>Category:</strong>
                  <%= item.menucategory %>
                </p>
                <p class="card-text mb-2 text-truncate" style="max-height: 60px; overflow: hidden;">
                  <%= item.menudescription %>
                </p>

                <form action="/cart/add/<%= item._id %>" method="POST" class="d-flex gap-2 mt-auto"
                  style="min-width: 60px;">
                  <button type="submit" class="btn btn-primary w-100">Add</button>
                </form>
              </div>
            </div>
          </div>
          <% }); %>
      </div>
      <% } else { %>
        <div class="text-center py-5">
          <h2 class="text-secondary">No menu items available yet</h2>
          <p class="text-muted">Please check back later!</p>
        </div>
        <% } %>
  </div>
<script src="/javascripts/handling.js"></script>

</body>

</html>